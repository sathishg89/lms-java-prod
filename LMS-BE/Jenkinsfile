pipeline {
    agent any
    
    stages {
        stage('Sonarqube analysis') {
            steps {
                // Maven clean and verify
                script {
                    sh 'cd LMS-BE/ && mvn clean verify sonar:sonar ' +
                       '-Dsonar.projectKey=lms-java ' +
                       "-Dsonar.projectName='lms-java' " +
                       '-Dsonar.host.url=http://54.152.141.60:9000 ' +
                       '-Dsonar.token=sqp_936474d0e8493d4885e019a44471c54c07c2f33b ' +
                       "-DskipTests"
                }
            }
        }
        
        stage('Post-build') {
            steps {
                // Send an email notification if the build passes
                post {
                    always {
                        emailext body: 'Build passed!', 
                                  subject: 'Build ${currentBuild.fullDisplayName} passed', 
                                  recipientProviders: [[$class: 'DevelopersRecipientProvider']]
                    }
                }
            }
        }
    }
}
